{
  "max-line-length": [
    true,
    {
      "limit": 120,
      "ignore-pattern": "^import |^export {(.*?)}",
      "check-strings": true,
      "check-regex": true
    }
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
 ],
  "exclude": [
    "node_modules"
  ]
}